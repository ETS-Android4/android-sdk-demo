<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<androidx.appcompat.widget.AppCompatImageView
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_marginTop="30dp"
		app:srcCompat="@drawable/hc_branding_light" />

	<TextView
		android:id="@+id/version"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"
		android:textSize="12dp"
		tools:text="0.0.0.00" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="20dp"
			android:orientation="vertical">

			<RadioGroup
				android:id="@+id/theme_group"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<RadioButton
					android:id="@+id/light"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true"
					android:text="Light Theme" />

				<RadioButton
					android:id="@+id/dark"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Dark Theme" />

				<RadioButton
					android:id="@+id/custom_color"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Custom Main Theme Color" />

				<RadioButton
					android:id="@+id/custom"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Custom Theme" />

			</RadioGroup>

			<View
				android:id="@+id/divider"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:layout_weight="1"
				android:background="?android:attr/listDivider" />

			<Switch
				android:id="@+id/pre_chat_switch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text=" Enable pre-chat form" />

			<LinearLayout
				android:id="@+id/chat_id_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="5dp"
				android:layout_marginTop="10dp"
				android:background="?selectableItemBackground"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Chat ID"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/chat_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:text="0.0.0.00" />

			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<FrameLayout
		android:id="@+id/chatCustomButton"
		style="@style/Button"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:visibility="gone">

		<TextView
			style="@style/Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Launch Chat CUSTOM settings" />

	</FrameLayout>

	<FrameLayout
		android:id="@+id/userData"
		style="@style/Button"
		android:layout_marginStart="20dp"

		android:layout_marginEnd="20dp"
		android:visibility="gone">

		<TextView
			style="@style/Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Launch Chat with user data" />

	</FrameLayout>

	<FrameLayout
		android:id="@+id/userDataButton"
		style="@style/Button"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp">

		<TextView
			style="@style/Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/change_user_data" />

		<androidx.appcompat.widget.AppCompatImageView
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_gravity="center_vertical|end"
			android:layout_marginEnd="15dp"
			app:srcCompat="@drawable/ic_arrow_right" />
	</FrameLayout>

	<FrameLayout
		android:id="@+id/customUserDataButton"
		style="@style/Button"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp">

		<TextView
			style="@style/Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/change_custom_user_data" />

		<androidx.appcompat.widget.AppCompatImageView
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_gravity="center_vertical|end"
			android:layout_marginEnd="15dp"
			app:srcCompat="@drawable/ic_arrow_right" />
	</FrameLayout>

	<View
		android:id="@+id/divider1"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginBottom="10dp"
		android:background="?android:attr/listDivider" />

	<FrameLayout
		android:id="@+id/chatButton"
		style="@style/Button"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp">

		<TextView
			style="@style/Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Launch Chat" />

		<androidx.appcompat.widget.AppCompatImageView
			android:layout_width="18dp"
			android:layout_height="18dp"
			android:layout_gravity="center_vertical|end"
			android:layout_marginTop="1dp"
			android:layout_marginEnd="20dp"
			app:srcCompat="@drawable/ic_favicon" />

		<FrameLayout
			android:id="@+id/badge1View"
			style="@style/Indicator"
			android:layout_marginEnd="15dp"
			android:visibility="invisible">

			<TextView
				android:id="@+id/badge1TextView"
				style="@style/Text.Counter"
				tools:text="1" />
		</FrameLayout>
	</FrameLayout>

	<FrameLayout
		android:id="@+id/logoutButton"
		style="@style/Button.Logout"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp">

		<TextView
			style="@style/Text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Logout" />

		<ProgressBar
			android:id="@+id/progress"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_gravity="center_vertical|end"
			android:layout_marginEnd="15dp"
			android:visibility="gone"
			tools:visibility="visible" />
	</FrameLayout>

</LinearLayout>